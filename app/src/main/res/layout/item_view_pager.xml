<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_logo_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_user_avatar" />

    <TextView
        android:id="@+id/item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_logo_view"
        android:layout_toRightOf="@id/item_logo_view"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/item_info_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_logo_view"
        android:layout_toRightOf="@id/item_logo_view"
        android:textColor="@color/result_view"
        android:textSize="16sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/item_view_pager"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/item_logo_view"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/item_footer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view_pager"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:lines="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/item_footer_view"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_d0d0d0" />

</RelativeLayout>

