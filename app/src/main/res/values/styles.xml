<resources>
        <style name="Theme.Base" parent="Theme.AppCompat.NoActionBar">
            <item name="android:windowBackground">@color/color_theme</item>
            <!--填充信号栏-->
            <!--<item name="windowTranslucentStatus">true</item>-->
            <!-- -->
            <item name="actionBarSize">53dp</item>
            <item name="alertDialogTheme">@style/Alert</item>
            <item name="alertDialogStyle">@style/AlertDialogStyle</item>
        </style>

        <style name="Theme" parent="Theme.Base" />

        <style name="Alert">
            <item name="android:windowFrame">@null</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:windowIsTranslucent">false</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowFullscreen">true</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:background">@android:color/transparent</item>
            <item name="android:backgroundDimEnabled">true</item>
        </style>

        <style name="AlertDialogStyle">
            <item name="android:layout">@layout/dialog_alert_material</item>
        </style>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <!-- Customize your theme here. -->
    </style>
    <!--zxing-->
    <style name="ResultButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ShareButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--dialog-->
    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">false</item> <!--背景是否模糊显示-->
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/palette_primary_text_color</item>
        <item name="android:textColorHint">@color/palette_quaternary_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_text_box_selector</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ResetPassword.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">58dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/palette_primary_text_color</item>
        <item name="android:textColorHint">@color/palette_quaternary_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Widget.Design.Admin.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/color_fed952</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TextAppearance.Widget.Design.Admin.Toolbar.Title" parent="TextAppearance.Widget.Support.Platform.Toolbar.Title">
        <item name="android:maxWidth">180dp</item>
        <item name="android:textColor">@color/palette_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Widget.Support.Platform.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Widget.Design.Admin.Login.Confirm.TextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
